{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "esnext",
        "sourceMap": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "newLine": "LF"
    },
    "exclude": ["node_modules/**/*", "dist"]
}
